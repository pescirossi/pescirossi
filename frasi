<body>
    <div id="phrase-container">Caricamento frase...</div>
    <button onclick="getRandomPhrase()">Nuova Frase</button>

    <script>
        const phrases = [
            "Ogni giorno è un nuovo inizio.",
            "Credi in te stesso e tutto è possibile.",
            "Il coraggio è la chiave per ogni successo.",
            "Non smettere mai di imparare.",
            "La vita è ciò che ne fai, quindi fai del tuo meglio."
        ];

        function getRandomPhrase() {
            const randomIndex = Math.floor(Math.random() * phrases.length);
            const container = document.getElementById('phrase-container');
            container.innerText = phrases[randomIndex];
        }

        // Mostra una frase quando la pagina viene caricata
        window.onload = getRandomPhrase;
    </script>
</body>
